<!DOCTYPE html>
<html>
<head>
    <title>Payroll Dashboard</title>
    <link rel="stylesheet" href="/style.css">
</head>
<body>

<h2>Employee Payroll Dashboard</h2>

<a href="/add"><button>Add Employee</button></a>

<table>
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Department</th>
            <th>Salary</th>
            <th>Tax (12%)</th>
            <th>Net Salary</th>
            <th>Actions</th>
        </tr>
    </thead>

    <tbody>
        <% if (employees.length === 0) { %>
            <tr>
                <td colspan="7">No Record Found</td>
            </tr>
        <% } %>

        <% employees.forEach(emp => { %>
            <% let tax = emp.salary * 0.12; %>
            <% let net = emp.salary - tax; %>
            <tr>
                <td><%= emp.id %></td>
                <td><%= emp.name %></td>
                <td><%= emp.department %></td>
                <td>₹<%= emp.salary %></td>
                <td>₹<%= tax.toFixed(2) %></td>
                <td>₹<%= net.toFixed(2) %></td>
                <td>
                    <a href="/edit/<%= emp.id %>">Edit</a> |
                    <a href="/delete/<%= emp.id %>">Delete</a>
                </td>
            </tr>
        <% }) %>
    </tbody>
</table>

</body>
</html>
