<!DOCTYPE html>
<html>
<head>
<title>Employee Dashboard</title>
<link rel="stylesheet" href="/style.css">
</head>
<body>

<div class="container">

<h1>Employee Payroll Dashboard</h1>

<div class="top-bar">

<a href="/add" class="btn btn-add">+ Add Employee</a>

<form action="/search" method="GET" class="search-box">
<input type="number" name="id" placeholder="Search by ID" required>
<button class="btn btn-search">Search</button>
</form>

</div>

<table>

<thead>
<tr>
<th>ID</th>
<th>Name</th>
<th>Department</th>
<th>Basic Salary</th>
<th>Tax (12%)</th>
<th>Net Salary</th>
<th>Action</th>
</tr>
</thead>

<tbody>

<% if(employees.length === 0){ %>

<tr>
<td colspan="6">No Employee Found</td>
</tr>

<% } %>

<% employees.forEach(emp => { 
let tax = emp.salary * 0.12;
let net = emp.salary - tax;
%>

<tr>

<td><%= emp.id %></td>

<td><%= emp.name %></td>

<td><%= emp.department %></td>

<td>₹ <%= emp.salary %></td>

<td>₹ <%= tax.toFixed(2) %></td>

<td>₹ <%= net.toFixed(2) %></td>

<td>

<a href="/edit/<%= emp.id %>" class="action-btn edit">Edit</a>

<a href="/delete/<%= emp.id %>" class="action-btn delete">Delete</a>

</td>

</tr>

<% }) %>

</tbody>

</table>

</div>

</body>
</html>
